---
import {cn} from "../../lib/utils";

interface Props {
  className?: string;
  subHeading?: string;
}

const {className, subHeading} = Astro.props;
---

<div
  class={cn(
    " grid max-w-7xl items-center sm:my-12 md:grid-cols-6 md:gap-x-12",
    className
  )}
>
  <div
    class="mx-auto my-8 space-y-12 text-center md:col-span-4 md:my-0 md:text-left"
  >
    <h2 class="text-7xl font-bold font-thunder leading-[1] md:text-[100px]">
      <slot name="heading" />
    </h2>
    <p class="text-2xl md:text-3xl">{subHeading}</p>
    <div class="flex flex-col gap-4 md:flex-row items-center w-max">
      <slot name="mainButton" />
      <slot name="secondaryButton" />
    </div>
  </div>
  <div
    class="col-span-2 flex w-full flex-col items-center justify-center gap-y-6"
  >
    <slot />
  </div>
</div>
